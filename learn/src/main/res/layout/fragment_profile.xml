<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/white"
    tools:context=".Fragment_profile">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:src="@drawable/rectangle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="26sp"
        android:text="Profile Settings"
        android:textColor="@color/black"
        android:textSize="26sp"/>

    <ImageView
        android:id="@+id/account_icon_caroline"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginBottom="180dp"
        app:tint="@android:color/black"
        android:backgroundTint="#F44336"
        android:src="@drawable/ic_baseline_account_circle_24"/>

    <TextView
        android:id="@+id/caroline"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:text="Caroline DeMasi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/updateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginHorizontal="26sp"
        android:backgroundTint="#000000"
        android:textColorHint="#2E2E2E"
        android:textColor="#66BB6A"
        android:hint="Update Username (1x per month)" />


    <EditText
        android:id="@+id/updatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginHorizontal="26sp"
        android:backgroundTint="#000000"
        android:textColorHint="#2E2E2E"
        android:textColor="#66BB6A"
        android:hint="Update Password" />

    <EditText
        android:id="@+id/updatePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginHorizontal="26sp"
        android:backgroundTint="#000000"
        android:textColorHint="#2E2E2E"
        android:textColor="#66BB6A"
        android:hint="Add or Update Phone Number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:id="@+id/updatePWButton"
        android:text="Update"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="150dp"/>

</FrameLayout>