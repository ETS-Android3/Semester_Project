<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/white"
    tools:context=".Fragment_discussion">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:src="@drawable/rectangle" />

    <TextView
        android:id="@+id/discussions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="26sp"
        android:text="Discussions"
        android:textColor="@color/black"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/create_thread_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Create a new thread..."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"/>

    <ImageButton
        android:id="@+id/create_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@android:color/black" />

    <TextView
        android:id="@+id/thread_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Would anyone like to study for the exam this weekend?"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"/>

    <Button
        android:id="@+id/reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Reply"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="70dp"
        app:tint="@android:color/black"
        android:backgroundTint="#F44336"
        android:src="@drawable/ic_baseline_account_circle_24"/>


    <TextView
        android:id="@+id/text_classes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</FrameLayout>